<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TheNoteStorer.LoginPage">
    <ContentPage.Content>
         <StackLayout VerticalOptions="CenterAndExpand" Padding="25">
             <Label Text="Welcome to the Note Storer!"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"
                    FontSize="Large"
                    Margin="10"
                    />
            <Entry
                Placeholder="login"
                x:Name="LoginEntry"
                TextChanged="LoginEntry_TextChanged"
                ReturnType="Next"/>
            <Entry
                Placeholder="password"
                x:Name="PasswordEntry"
                IsPassword="true"
                TextChanged="PasswordEntry_TextChanged"
                ReturnType="Send"/>
            <Button
          Text="Login"
          x:Name="LoginButton"
          Clicked="LoginButton_Clicked"
                FontSize="25"
                BackgroundColor="LightGreen"
                TextColor="Black"
                BorderWidth="2"
                BorderColor="LawnGreen"
          />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
